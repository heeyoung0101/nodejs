<body>
  <!-- 이 자리에 nav.html 삽입 -->
  <%- include('nav.html') %> 

  <h4 class="container mt-4"><strong>수정 페이지</strong></h4>

  <div class="container mt-3">
    <!-- PUT 요청-->
    <form action="/edit?_method=PUT" method="POST">
      <div class="form-group">
        <label>오늘의 할일</label>
        <input type="text" placeholder="<%=data.제목%>" value="<%=data.제목%>" class="form-control" name="title">
      </div>
      <div class="form-group">
        <label>날짜</label>
        <input type="text" placeholder="<%=data.날짜%>" value="<%=data.날짜%>" class="form-control" name="date">
        <input type="hidden" name="id" value="<%=data._id%>">
    </div>
      <button type="submit" class="btn btn-outline-secondary">Submit</button>
    </form>
  </div>



